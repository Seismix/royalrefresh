{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@royalrecap/types": ["./src/types/types"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.js"],
    "exclude": [
        "node_modules",
        "docs",
        "dist",
        "playwright-report",
        "test-results"
    ]
}
