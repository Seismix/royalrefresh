{
    "name": "royalrecap",
    "version": "1.0.0",
    "description": "A web extension for royalroad.com. For people who juggle multiple stories",
    "main": "background.js",
    "directories": {
        "doc": "docs"
    },
    "webExt": {
        "configDiscovery": false,
        "run": {
            "startUrl": [
                "https://www.royalroad.com/fiction/63759/super-supportive/chapter/1097958/two-mistakes",
                "about:addons",
                "about:debugging"
            ]
        }
    },
    "scripts": {
        "dev": "web-ext run",
        "dev:verbose": "web-ext run --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Seismix/RoyalRecap.git"
    },
    "keywords": [
        "royal",
        "road",
        "recap",
        "read",
        "webnovel",
        "web",
        "extension"
    ],
    "author": "Seismix",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Seismix/RoyalRecap/issues"
    },
    "homepage": "https://github.com/Seismix/RoyalRecap#readme",
    "devDependencies": {
        "@types/firefox-webext-browser": "^111.0.1",
        "typescript": "^5.1.6",
        "web-ext": "^7.8.0"
    }
}
